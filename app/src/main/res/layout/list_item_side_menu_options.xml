<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/atvOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_wallet"
            android:drawableEnd="@drawable/ic_arrow_forward_dark"
            android:drawablePadding="@dimen/dimen_12dp"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:paddingStart="@dimen/dimen_18dp"
            android:paddingTop="@dimen/dimen_16dp"
            android:paddingEnd="@dimen/dimen_18dp"
            android:paddingBottom="@dimen/dimen_16dp"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_medium"
            tools:text="@string/app_name" />

        <View
            android:id="@+id/viewDivider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginStart="@dimen/dimen_50dp"
            android:alpha="0.5"
            android:background="@color/colorGray" />

    </LinearLayout>

</layout>