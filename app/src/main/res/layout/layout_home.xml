<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        >


        <RelativeLayout
            android:id="@+id/rlHeader"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/aivMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:background="?android:attr/actionBarItemBackground"
                android:padding="@dimen/dimen_10dp"
                app:srcCompat="@drawable/ic_menu" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dimen_10dp"
                android:layout_toEndOf="@id/aivMenu"
                app:srcCompat="@drawable/atl2" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/dimen_8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/aivWallet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/actionBarItemBackground"
                    android:padding="@dimen/dimen_10dp"
                    app:srcCompat="@drawable/ic_wallet_white" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/aivSupportChat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/actionBarItemBackground"
                    android:padding="@dimen/dimen_10dp"
                    app:srcCompat="@drawable/ic_support_chat_white" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/aivNotification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/actionBarItemBackground"
                    android:padding="@dimen/dimen_10dp"
                    app:srcCompat="@drawable/ic_bell_white" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="333dp"
            android:layout_height="333dp"
            android:background="@drawable/fadeimageicon"


            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
           ></RelativeLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rlHeader">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible">


                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/vpBanners"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="@dimen/dimen_0dp"
                    android:layout_marginTop="@dimen/dimen_4dp"
                    android:clipToPadding="false"
                    android:paddingStart="@dimen/dimen_8dp"
                    android:paddingEnd="@dimen/dimen_8dp"
                    app:layout_constraintDimensionRatio="2:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <com.myastrotell.utils.CircleIndicator
                    android:id="@+id/ciBanners"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_10dp"
                    android:padding="@dimen/dimen_10dp"
                    app:ci_height="@dimen/dimen_8dp"
                    app:ci_width="@dimen/dimen_8dp"
                    app:layout_constraintBottom_toBottomOf="@id/vpBanners"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvSunSigns"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_2dp"
                    android:clipToPadding="false"
                    android:nestedScrollingEnabled="false"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/dimen_10dp"
                    android:paddingTop="@dimen/dimen_6dp"
                    android:paddingEnd="@dimen/dimen_10dp"
                    android:paddingBottom="@dimen/dimen_14dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/vpBanners"
                    tools:listitem="@layout/list_item_sun_sign" />


                <!--  Chat with Astrologer  -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clChat"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="@dimen/dimen_16dp"
                    android:layout_marginEnd="@dimen/dimen_6dp"
                    android:background="@drawable/shape_rect_white_corners_16dp_ripple"
                    android:elevation="@dimen/dimen_4dp"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toStartOf="@+id/clCall"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rvSunSigns">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimen_10dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toTopOf="@+id/glChat"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.facebook.drawee.view.SimpleDraweeView
                            android:id="@+id/aivChat"
                            android:layout_width="@dimen/dimen_50dp"
                            android:layout_height="@dimen/dimen_50dp"
                            android:scaleType="fitCenter"
                            app:actualImageScaleType="fitCenter"
                            app:placeholderImage="@drawable/shape_rect_light_gray_corner_5dp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/atvLabelChat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_14dp"
                            android:gravity="center"
                            android:text="@string/chat_with_astrologer"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/text_size_15sp"
                            app:fontFamily="@font/roboto_bold" />

                    </LinearLayout>

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/glChat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.7" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dimen_1dp"
                        android:alpha="0.4"
                        android:background="@color/colorGray"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/glChat" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/atvLabelChatRate"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_margin="@dimen/dimen_2dp"
                        android:gravity="center"
                        android:text="@string/chat_with_astrologer_desc"
                        android:textColor="@color/colorGrayText"
                        android:textSize="@dimen/text_size_12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/glChat" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <!--  Talk to Astrologer  -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clCall"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="@dimen/dimen_6dp"
                    android:layout_marginEnd="@dimen/dimen_16dp"
                    android:background="@drawable/shape_rect_white_corners_16dp_ripple"
                    android:elevation="@dimen/dimen_4dp"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/clChat"
                    app:layout_constraintTop_toTopOf="@id/clChat">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimen_10dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toTopOf="@+id/glCall"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.facebook.drawee.view.SimpleDraweeView
                            android:id="@+id/aivCall"
                            android:layout_width="@dimen/dimen_50dp"
                            android:layout_height="@dimen/dimen_50dp"
                            android:scaleType="fitCenter"
                            app:actualImageScaleType="fitCenter"
                            app:placeholderImage="@drawable/shape_rect_light_gray_corner_5dp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/atvLabelCall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_14dp"
                            android:gravity="center"
                            android:text="@string/talk_to_astrologer"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/text_size_15sp"
                            app:fontFamily="@font/roboto_bold" />

                    </LinearLayout>

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/glCall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.7" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dimen_1dp"
                        android:alpha="0.4"
                        android:background="@color/colorGray"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/glCall" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/atvLabelCallRate"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_margin="@dimen/dimen_2dp"
                        android:gravity="center"
                        android:text="@string/talk_to_astrologer_desc"
                        android:textColor="@color/colorGrayText"
                        android:textSize="@dimen/text_size_12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/glCall" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <!--  Get Detailed Report  -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clDetailedReport"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="@dimen/dimen_16dp"
                    android:layout_marginTop="@dimen/dimen_12dp"
                    android:layout_marginEnd="@dimen/dimen_6dp"
                    android:background="@drawable/shape_rect_white_corners_16dp_ripple"
                    android:elevation="@dimen/dimen_4dp"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toStartOf="@+id/clAstroMall"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/clChat">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimen_10dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toTopOf="@+id/glReport"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.facebook.drawee.view.SimpleDraweeView
                            android:id="@+id/aivReport"
                            android:layout_width="@dimen/dimen_46dp"
                            android:layout_height="@dimen/dimen_46dp"
                            android:scaleType="fitCenter"
                            app:actualImageScaleType="fitCenter"
                            app:placeholderImage="@drawable/shape_rect_light_gray_corner_5dp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/atvLabelReport"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_14dp"
                            android:gravity="center"
                            android:text="@string/get_detailed_report"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/text_size_15sp"
                            app:fontFamily="@font/roboto_bold" />

                    </LinearLayout>

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/glReport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.7" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_1dp"
                        android:alpha="0.4"
                        android:background="@color/colorGray"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/glReport" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/atvLabelReportRate"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_margin="@dimen/dimen_2dp"
                        android:gravity="center"
                        android:text="@string/detailed_report_desc"
                        android:textColor="@color/colorGrayText"
                        android:textSize="@dimen/text_size_12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/glReport" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <!--  Astro Mall  -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clAstroMall"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="@dimen/dimen_6dp"
                    android:layout_marginEnd="@dimen/dimen_16dp"
                    android:background="@drawable/shape_rect_white_corners_16dp_ripple"
                    android:elevation="@dimen/dimen_4dp"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/clDetailedReport"
                    app:layout_constraintTop_toTopOf="@id/clDetailedReport">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimen_10dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toTopOf="@+id/glMall"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.facebook.drawee.view.SimpleDraweeView
                            android:id="@+id/aivMall"
                            android:layout_width="@dimen/dimen_48dp"
                            android:layout_height="@dimen/dimen_48dp"
                            android:scaleType="fitCenter"
                            app:actualImageScaleType="fitCenter"
                            app:placeholderImage="@drawable/shape_rect_light_gray_corner_5dp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/atvLabelMall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_12dp"
                            android:gravity="center"
                            android:text="@string/shop_at_astro_mall"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/text_size_15sp"
                            app:fontFamily="@font/roboto_bold" />

                    </LinearLayout>

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/glMall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.7" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_1dp"
                        android:alpha="0.4"
                        android:background="@color/colorGray"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/glMall" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/atvLabelMallRate"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_margin="@dimen/dimen_2dp"
                        android:gravity="center"
                        android:text="@string/astro_mall_desc"
                        android:textColor="@color/colorGrayText"
                        android:textSize="@dimen/text_size_12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/glMall" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <!--  Astrology News  -->
                <RelativeLayout
                    android:id="@+id/rlAstroNews"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_16dp"
                    android:layout_marginTop="@dimen/dimen_22dp"
                    android:layout_marginEnd="@dimen/dimen_16dp"
                    android:background="@drawable/shape_rect_white_corners_16dp_ripple"
                    android:elevation="@dimen/dimen_3dp"
                    android:paddingStart="@dimen/dimen_12dp"
                    android:paddingTop="@dimen/dimen_10dp"
                    android:paddingEnd="@dimen/dimen_12dp"
                    android:paddingBottom="@dimen/dimen_10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/clDetailedReport">


                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/aivAstroNews"
                        android:layout_width="@dimen/dimen_58dp"
                        android:layout_height="@dimen/dimen_58dp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dimen_10dp"
                        android:scaleType="fitCenter"
                        app:actualImageResource="@drawable/ic_astro_news_new"
                        app:actualImageScaleType="fitCenter"
                        app:placeholderImage="@drawable/shape_rect_light_gray_corner_5dp" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/atvLabelAstroNews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/aivAstroNews"
                        android:text="@string/astrology_news"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size_15sp"
                        app:fontFamily="@font/roboto_bold" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/atvLabelNewsDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/atvLabelAstroNews"
                        android:layout_marginTop="@dimen/dimen_5dp"
                        android:layout_toEndOf="@id/aivAstroNews"
                        android:text="@string/astrology_news_desc"
                        android:textColor="@color/colorGrayText"
                        android:textSize="@dimen/text_size_small" />

                </RelativeLayout>


                <!--  Order history  -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clOrderHistory"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_16dp"
                    android:layout_marginTop="@dimen/dimen_22dp"
                    android:layout_marginEnd="@dimen/dimen_16dp"
                    android:layout_marginBottom="@dimen/dimen_22dp"
                    android:background="@drawable/shape_rect_white_corners_16dp_ripple"
                    android:clickable="false"
                    android:elevation="@dimen/dimen_3dp"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/dimen_10dp"
                    android:paddingTop="@dimen/dimen_10dp"
                    android:paddingEnd="@dimen/dimen_10dp"
                    android:paddingBottom="@dimen/dimen_12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rlAstroNews">


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/atvLabelOrderHistory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_6dp"
                        android:layout_marginTop="@dimen/dimen_2dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:text="@string/order_history"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size_15sp"
                        app:fontFamily="@font/roboto_bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <LinearLayout
                        android:id="@+id/llChatHistory"
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="@dimen/dimen_0dp"
                        android:layout_marginStart="@dimen/dimen_4dp"
                        android:layout_marginTop="@dimen/dimen_15dp"
                        android:layout_marginEnd="@dimen/dimen_4dp"
                        android:background="@drawable/shape_rect_stroke_gray_corners_16dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintEnd_toStartOf="@+id/llCallHistory"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/atvLabelOrderHistory">

                        <com.facebook.drawee.view.SimpleDraweeView
                            android:id="@+id/aivChatHistory"
                            android:layout_width="@dimen/dimen_34dp"
                            android:layout_height="@dimen/dimen_34dp"
                            android:scaleType="fitCenter"
                            app:actualImageResource="@drawable/ic_chat_history_new"
                            app:actualImageScaleType="fitCenter"
                            app:placeholderImage="@drawable/shape_rect_light_gray_corner_5dp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/atvChatHistory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dimen_6dp"
                            android:gravity="center"
                            android:text="@string/chat"
                            android:textColor="@color/colorGrayText"
                            android:textSize="@dimen/text_size_small" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llCallHistory"
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="@dimen/dimen_0dp"
                        android:layout_marginStart="@dimen/dimen_4dp"
                        android:layout_marginEnd="@dimen/dimen_4dp"
                        android:background="@drawable/shape_rect_stroke_gray_corners_16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintEnd_toStartOf="@+id/llReportHistory"
                        app:layout_constraintStart_toEndOf="@id/llChatHistory"
                        app:layout_constraintTop_toTopOf="@id/llChatHistory">

                        <com.facebook.drawee.view.SimpleDraweeView
                            android:id="@+id/aivCallHistory"
                            android:layout_width="@dimen/dimen_34dp"
                            android:layout_height="@dimen/dimen_34dp"
                            android:scaleType="fitCenter"
                            app:actualImageResource="@drawable/ic_call_history_new"
                            app:actualImageScaleType="fitCenter"
                            app:placeholderImage="@drawable/shape_rect_light_gray_corner_5dp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/atvCallHistory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dimen_6dp"
                            android:gravity="center"
                            android:text="@string/call"
                            android:textColor="@color/colorGrayText"
                            android:textSize="@dimen/text_size_small" />

                    </LinearLayout>


                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/llReportHistory"
