<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_6dp"
        android:background="@drawable/shape_rect_white_corners_16dp_ripple"
        android:elevation="@dimen/dimen_4dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/atvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
android:layout_margin="@dimen/dimen_12dp"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_16sp"
           android:gravity="center"
            android:layout_centerInParent="true"
            app:fontFamily="@font/roboto_bold"
            tools:text="@string/app_name" />

        <ImageView
            android:id="@+id/speakout"
            android:layout_width="@dimen/dimen_36dp"
            android:layout_height="@dimen/dimen_36dp"
            android:src="@drawable/speak"
android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/dimen_16dp"
            android:layout_centerVertical="true"
            ></ImageView>

    <ImageView

        android:layout_centerVertical="true"
        android:id="@+id/speak"
        android:layout_width="@dimen/dimen_36dp"
        android:layout_height="@dimen/dimen_36dp"
        android:src="@drawable/speakout"
        android:layout_marginRight="@dimen/dimen_16dp"
        android:layout_alignParentEnd="true"
        android:visibility="gone" />
       </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:alpha="0.4"
            android:background="@color/colorGray" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/atvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_15dp"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:layout_marginEnd="@dimen/dimen_15dp"
            android:layout_marginBottom="@dimen/dimen_15dp"
            android:alpha="0.75"
            android:breakStrategy="simple"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_16sp"
            android:visibility="gone"
            app:fontFamily="@font/roboto_regular"
            tools:text="@string/dummy_Description" />


        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_15dp"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:layout_marginEnd="@dimen/dimen_15dp"
            android:layout_marginBottom="@dimen/dimen_15dp"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:alpha="0.75"
            tools:ignore="WebViewLayout" />

    </LinearLayout>

</layout>
