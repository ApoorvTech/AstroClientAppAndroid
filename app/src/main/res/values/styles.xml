<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="MaterialAppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>


    <style name="SplashTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="LightStatusBarTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor">@android:color/white</item>
    </style>


    <style name="ChatRequestStatusBarTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/colorBlack</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:statusBarColor">@color/colorBlack</item>
    </style>


    <!--  Primary (Orange) Button Style  -->
    <style name="PrimaryButtonStyle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/selector_orange_button</item>
        <item name="android:enabled">true</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/dimen_20dp</item>
        <item name="android:paddingEnd">@dimen/dimen_20dp</item>
        <item name="android:paddingTop">@dimen/dimen_14dp</item>
        <item name="android:paddingBottom">@dimen/dimen_14dp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>


    <!--  News Tab Layout Style  -->
    <style name="NewsTabStyle" parent="Widget.Design.TabLayout">
        <item name="android:background">@null</item>
        <item name="tabBackground">@drawable/selector_news_tabs</item>
        <item name="tabMode">scrollable</item>
        <item name="tabPaddingStart">@dimen/dimen_18dp</item>
        <item name="tabPaddingEnd">@dimen/dimen_18dp</item>
        <item name="tabPaddingBottom">@dimen/dimen_6dp</item>
        <item name="tabPaddingTop">@dimen/dimen_6dp</item>
        <item name="tabRippleColor">@android:color/transparent</item>
        <item name="tabIndicator">@null</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabTextAppearance">@style/NewsTabTextAppearance</item>
    </style>

    <style name="NewsTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/selector_text_color_news_tabs</item>
        <item name="textAllCaps">true</item>
    </style>


    <!--  Order History Tab Layout Style  -->
    <style name="OrdersTabStyle" parent="Widget.Design.TabLayout">
        <item name="android:background">@null</item>
        <item name="tabBackground">@drawable/selector_order_history_tabs</item>
        <item name="tabMode">fixed</item>
        <item name="tabPaddingStart">@dimen/dimen_10dp</item>
        <item name="tabPaddingEnd">@dimen/dimen_10dp</item>
        <item name="tabPaddingBottom">@dimen/dimen_6dp</item>
        <item name="tabPaddingTop">@dimen/dimen_6dp</item>
        <item name="tabRippleColor">@android:color/transparent</item>
        <item name="tabIndicator">@null</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabTextAppearance">@style/OrdersTabTextAppearance</item>
    </style>

    <style name="OrdersTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/selector_text_color_order_history_tabs</item>
        <item name="textAllCaps">false</item>
    </style>

    <!--  full screen dialog style -->
    <style name="FullScreenDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:gravity">top</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <!--  Bottom dialog style  -->
    <style name="BottomDialogStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:gravity">bottom</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="CustomChipStyle" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>



    <style name="AlertDialogTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
    </style>


    <!-- Dark dialog style-->
    <style name="DarkDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="titleTextColor">@color/colorSolidBlack</item>
        <item name="textColorAlertDialogListItem">@color/colorBlack</item>
        <item name="android:gravity">center</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="MyDatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#FF9C05</item>
        <!--selected Item color-->
        <item name="colorControlActivated">#FF9C05</item>
        <!-- arrow bordercolor(<>)-->
        <!--                <item name="android:selectableItemBackgroundBorderless">@color/border</item>-->
        <!-- Highlight item color-->
        <item name="colorControlHighlight">#FF9C05</item>
        <!--Calender Background color -->
        <item name="android:windowBackground">@color/colorWhite</item>
        <!-- Ok Cancel Color-->
        <item name="android:textColor">#FF9C05</item>
        <!-- Week TextColor-->
        <item name="android:textColorSecondary">@color/colorBlack</item>
        <!-- Calender Number color arrow color (< >) -->
        <item name="android:textColorPrimary">@color/colorBlack</item>
        <!--day , month-->
        <item name="android:textColorPrimaryInverse">@color/colorWhite</item>
        <!-- year-->
        <item name="android:textColorSecondaryInverse">@color/colorWhite</item>

    </style>

</resources>